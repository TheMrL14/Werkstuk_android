<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="15dp"
    android:orientation="horizontal"
    android:padding="0dp"
    android:elevation="4dp"
    android:gravity="center_vertical"
    >
    //https://stackoverflow.com/questions/22105775/imageview-in-circular-through-xml
    <androidx.constraintlayout.utils.widget.ImageFilterView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgIngredientsThumbnail"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/mockup"
        android:background="@color/white"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/txtIngredientsTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:text="Ingredient"
        style="@style/normal_text"
       />

    <TextView
        android:id="@+id/txtIngredientsQuantity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:padding="15dp"
        android:text="250g"
        style="@style/small_text"
        />

</LinearLayout>